<Window x:Class="Craft.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Craft"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"      
        TextElement.Foreground = "{DynamicResource MaterialDesignBody}"
        Background = "{DynamicResource MaterialDesignPaper}" 
        TextElement.FontWeight = "Medium" 
        TextElement.FontSize = "14"
        FontFamily = "pack: // application: ,, , / MaterialDesignThemes.Wpf; component / Resources / Roboto / # Roboto"        
        Title="CrafterFold" Height="600" Width="1000">


    <Window.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.PopupBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <materialDesign:ColorZone
            Mode="PrimaryLight"
            Padding="16">
            <StackPanel
                Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    Margin="30 0 0 0"
                    Text="CrafterFold" />
            </StackPanel>
        </materialDesign:ColorZone>

        <TabControl
               Grid.Row="1"
                Style="{StaticResource MaterialDesignNavigatilRailTabControl}">
            <TabItem
                Header="{materialDesign:PackIcon Kind=LeadPencil, Size=24}"
                Style="{StaticResource MaterialDesignNavigationRailTabItem}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <materialDesign:ColorZone
                            Grid.Row="0"
                            Mode="SecondaryMid"
                            Padding="8">
                        <StackPanel
                                Orientation="Horizontal">
                            <TextBlock
                                    VerticalAlignment="Center"
                                    Margin="8 0 0 0"
                                    Text="Заказы" />
                        </StackPanel>
                    </materialDesign:ColorZone>

                    <Border Grid.Row="1"
                            BorderThickness="1"
                            BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                            MinHeight="256"
                            ClipToBounds="True">
                            <Grid>
                                <DataGrid
                                    
                                    x:Name="ordersGrid"
                                    AutoGenerateColumns="False" Background="#FFFAFAFA" BorderBrush="#1F000000" Foreground="#DD000000">
                                    <DataGrid.Columns>
                                        <materialDesign:DataGridTextColumn
                                            IsReadOnly ="True"
                                            Binding="{Binding IdOrder}"
                                            Header="Номер"
                                            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                            EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}" >
                                        </materialDesign:DataGridTextColumn>

                                        <materialDesign:DataGridTextColumn
                                            IsReadOnly ="True"
                                            Binding="{Binding Name}"
                                            Header="Название"
                                            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                            EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}">
                                        </materialDesign:DataGridTextColumn>

                                        <materialDesign:DataGridTextColumn
                                            IsReadOnly ="True"
                                            Binding="{Binding Orderdate}"
                                            Header="Дата заказа"
                                            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                            EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}" >
                                        </materialDesign:DataGridTextColumn>

                                        <materialDesign:DataGridTextColumn
                                            IsReadOnly ="True"
                                            Binding="{Binding Deadline}"
                                            Header="Срок"
                                            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                            EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}" >
                                        </materialDesign:DataGridTextColumn>

                                        <DataGridTemplateColumn 
                                            SortMemberPath="Stagename"
                                            IsReadOnly ="False"
                                            Header="Этап">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock x:Name="checkstage"  Text="{Binding Stagename}"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                            <DataGridTemplateColumn.CellEditingTemplate>
                                                <DataTemplate>
                                                    <ComboBox 
                                                            x:Name="checkstagesList"
                                                            materialDesign:HintAssist.Hint="(editable)"
                                                            SelectedValue="{Binding Stagename, Mode=OneWay}"
                                                            DropDownOpened ="checkstagesList_DropDownOpened"
                                                            DropDownClosed="CheckStagesList_Selected"
                                                        
                                                            ItemsSource="{DynamicResource checkstageList}"
                                                            IsEditable="False">
                                                        <ComboBox.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <VirtualizingStackPanel />
                                                            </ItemsPanelTemplate>
                                                        </ComboBox.ItemsPanel>
                                                    </ComboBox>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellEditingTemplate>
                                        </DataGridTemplateColumn>

                                        <materialDesign:DataGridTextColumn
                                            IsReadOnly ="True"
                                            Binding="{Binding Nameofcategory}"
                                            Header="Категория"
                                            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                            EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}">
                                        </materialDesign:DataGridTextColumn>

                                        <DataGridTemplateColumn IsReadOnly ="True">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <materialDesign:PopupBox
                                                        Opened="Popupmod_Opening"
                                                        StaysOpen="True"
                                                        PlacementMode="BottomAndAlignCentres"
                                                        ToolTipService.Placement="Right">
                                                        <Grid
                                                            Margin="8,8,8,8">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition />
                                                                <RowDefinition />
                                                                <RowDefinition />
                                                            </Grid.RowDefinitions>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <StackPanel Grid.Row="0"  Grid.ColumnSpan="2"
                                                                Margin="16"
                                                                HorizontalAlignment="Center">
                                                                <TextBlock
                                                                    Text="Подробнее" />
                                                            </StackPanel>
                                                            <StackPanel Grid.Column="0" Grid.Row="1"
                                                                Margin="16">
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Width="85"
                                                                        Margin="0 8 0 0"
                                                                        Text="Категория" />
                                                                    <TextBlock Width="85"
                                                                        Margin="0 8 0 0"
                                                                        Text="{Binding Nameofcategory}" />

                                                                </StackPanel>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Width="85"
                                                                        Margin="0 8 0 0"
                                                                        Text="Изделие" />
                                                                    <TextBlock Width="85"
                                                                        Margin="0 8 0 0"
                                                                        Text="{Binding Name}" />

                                                                </StackPanel>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Width="85"
                                                                        Margin="0 8 0 0"
                                                                        Text="Покраска" />
                                                                    <TextBlock Width="85"
                                                                        Margin="0 8 0 0"
                                                                        Text="{Binding Paint}" />

                                                                </StackPanel>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Width="85"
                                                                        Margin="0 8 0 0"
                                                                        Text="Размер" />
                                                                    <TextBlock Width="85"
                                                                        Margin="0 8 0 0"
                                                                        Text="{Binding Size}" />

                                                                </StackPanel>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Width="85"
                                                                        Margin="0 8 0 0"
                                                                        Text="Магазин" />
                                                                    <TextBlock Width="85"
                                                                        Margin="0 8 0 0"
                                                                        Text="{Binding Shop}" />

                                                                </StackPanel>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Width="85"
                                                                        Margin="0 8 0 0"
                                                                        Text="Этап" />
                                                                    <TextBlock Width="85"
                                                                        Margin="0 8 0 0"
                                                                        Text="{Binding Stagename}" />

                                                                </StackPanel>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Width="85"
                                                                        Margin="0 15 0 0"
                                                                        Text="Стоимость" />
                                                                    <TextBlock Width="85"
                                                                        Margin="0 15 0 0"
                                                                        Text="{Binding Cost}" />

                                                                </StackPanel>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Width="85"
                                                                        Margin="0 15 0 0"
                                                                        Text="Дата заказа" />
                                                                    <TextBlock Width="85"
                                                                        Margin="0 15 0 0"
                                                                        Text="{Binding Orderdate}" />

                                                                </StackPanel>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Width="85"
                                                                        Margin="0 15 0 0"
                                                                        Text="Срок" />
                                                                    <TextBlock Width="85"
                                                                        Margin="0 15 0 0"
                                                                        Text="{Binding Deadline}" />

                                                                </StackPanel>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock
                                                                        Margin="0 15 0 0"
                                                                        Width="85"
                                                                        Text="Детализация" />
                                                                    <TextBlock
                                                                        Margin="0 15 0 0"
                                                                        Width="85"
                                                                        Text="{Binding Specification}" />

                                                                </StackPanel>
                                                            </StackPanel>
                                                            <StackPanel Grid.Column="1" Grid.Row="1"
                                                                Margin="16">
                                                                <TextBlock
                                                                    Width="140"
                                                                    Margin="0,0,0,5"
                                                                    Text="Модификации" />
                                                                <DataGrid 
                                                                    HeadersVisibility="None"
                                                                    Height="100"
                                                                    Width="200"
                                                                    IsReadOnly ="True"
                                                                    
                                                                    ItemsSource = "{DynamicResource allmodList}"
                                                                    AutoGenerateColumns="True" Background="#FFFAFAFA" BorderBrush="#1F000000" Foreground="#DD000000">
                                                                </DataGrid>

                                                                <TextBlock
                                                                Margin="0,10,0,5"
                                                                Width="140"
                                                                Text="Фотографии заказчика" />

                                                                <DataGrid 
                                                                    HeadersVisibility="None"
                                                                    Height="100"
                                                                    Width="200"
                                                                    IsReadOnly ="True"
                                                                    ItemsSource = "{DynamicResource allorderphotoList}"
                                                                    AutoGenerateColumns="True" Background="#FFFAFAFA" BorderBrush="#1F000000" Foreground="#DD000000">
                                                                </DataGrid>

                                                            </StackPanel>
                                                        </Grid>
                                                    </materialDesign:PopupBox>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                                
                                <materialDesign:PopupBox
                                    VerticalAlignment="Bottom"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,140,60"
                                    Width="40"
                                    Height="40"
                                    Style="{StaticResource MaterialDesignMultiFloatingActionAccentPopupBox}"
                                    TextElement.Foreground = "{DynamicResource MaterialDesignBody}"
                                    StaysOpen="True"
                                    PlacementMode="TopAndAlignRightEdges">
                                    <materialDesign:PopupBox.ToggleContent>
                                        <materialDesign:PackIcon
                                            Kind="Plus"
                                            Foreground="White"
                                            Width="22"
                                            Height="22" />
                                    </materialDesign:PopupBox.ToggleContent>
                                <Grid Background="{DynamicResource MaterialDesignCardBackground}"  
                                        Effect="{StaticResource MaterialDesignShadowDepth2}" >
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Row="0"  Grid.ColumnSpan="2"
                                    Margin="16"
                                    HorizontalAlignment="Center">
                                            <TextBlock
                                        Text="Новый заказ" />
                                        </StackPanel>
                                        <StackPanel Grid.Column="0" Grid.Row="1"
                                    Margin="16">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Width="85"
                                                   Margin="0 8 0 0"
                                        Text="Категория" />
                                                <ComboBox 
                                        x:Name="categoryList"
                                        materialDesign:HintAssist.Hint="(editable)"
                                        MinWidth="140"
                                        IsEditable="True"
                                        SelectionChanged="CategoryList_Selected">
                                                    <ComboBox.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <VirtualizingStackPanel />
                                                        </ItemsPanelTemplate>
                                                    </ComboBox.ItemsPanel>
                                                </ComboBox>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Width="85"
                                                   Margin="0 8 0 0"
                                        Text="Изделие" />
                                                <ComboBox 
                                        x:Name="productsList"
                                        materialDesign:HintAssist.Hint="(editable)"
                                        MinWidth="140"
                                        IsEditable="True"
                                        SelectionChanged="ProductsList_Selected">
                                                    <ComboBox.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <VirtualizingStackPanel />
                                                        </ItemsPanelTemplate>
                                                    </ComboBox.ItemsPanel>
                                                </ComboBox>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Width="85"
                                                   Margin="0 8 0 0"
                                        Text="Покраска" />
                                                <ComboBox 
                                        x:Name="paintingList"
                                        materialDesign:HintAssist.Hint="(editable)"
                                        MinWidth="140"
                                        IsEditable="True">
                                                    <ComboBox.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <VirtualizingStackPanel />
                                                        </ItemsPanelTemplate>
                                                    </ComboBox.ItemsPanel>
                                                </ComboBox>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Width="85"
                                                   Margin="0 8 0 0"
                                        Text="Размер" />
                                                <ComboBox 
                                        x:Name="sizeList"
                                        materialDesign:HintAssist.Hint="(editable)"
                                        MinWidth="140"
                                        IsEditable="True">
                                                    <ComboBox.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <VirtualizingStackPanel />
                                                        </ItemsPanelTemplate>
                                                    </ComboBox.ItemsPanel>
                                                </ComboBox>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Width="85"
                                                   Margin="0 8 0 0"
                                        Text="Магазин" />
                                                <ComboBox 
                                        x:Name="shopList"
                                        materialDesign:HintAssist.Hint="(editable)"
                                        MinWidth="140"
                                        IsEditable="True">
                                                    <ComboBox.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <VirtualizingStackPanel />
                                                        </ItemsPanelTemplate>
                                                    </ComboBox.ItemsPanel>
                                                </ComboBox>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Width="85"
                                                   Margin="0 8 0 0"
                                        Text="Этап" />
                                                <ComboBox 
                                        x:Name="stageList"
                                        materialDesign:HintAssist.Hint="(editable)"
                                        MinWidth="140"
                                        IsEditable="True">
                                                    <ComboBox.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <VirtualizingStackPanel />
                                                        </ItemsPanelTemplate>
                                                    </ComboBox.ItemsPanel>
                                                </ComboBox>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Width="85"
                                            Margin="0 15 0 0"
                                            Text="Стоимость" />
                                                <TextBox
                                        Margin="0 8 0 0"
                                        Width="140"
                                        HorizontalAlignment="Stretch"
                                        x:Name="cost" />

                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Width="85"
                                            Margin="0 15 0 0"
                                            Text="Дата заказа" />
                                                <DatePicker
                                        Width="140"
                                        materialDesign:HintAssist.Hint="Pick Date"
                                        Style="{StaticResource MaterialDesignFloatingHintDatePicker}" 
                                        x:Name="date"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Width="85"
                                            Margin="0 15 0 0"
                                            Text="Срок" />
                                                <DatePicker
                                        Width="140"
                                        materialDesign:HintAssist.Hint="Pick Date"
                                        Style="{StaticResource MaterialDesignFloatingHintDatePicker}" 
                                        x:Name="deadline"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock
                                        Margin="0 15 0 0"
                                        Width="85"
                                        Text="Детализация" />
                                                <TextBox
                                        Width="140"
                                        Margin="0 8 0 0"
                                        HorizontalAlignment="Stretch"
                                        x:Name="specific" />
                                            </StackPanel>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" Grid.Row="1"
                                    Margin="16">
                                            <TextBlock
                                        Width="140"
                                        Margin="0,0,0,5"
                                        Text="Модификации" />
                                            
                                                <Border
                                            BorderThickness="1"
                                            BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                                            
                                            ClipToBounds="True">
                                                    <Grid>
                                                        <DataGrid 
                                                    HeadersVisibility="None"
                                                    Height="100"
                                                    Width="200"
                                                    IsReadOnly ="True"
                                                    x:Name="ordermodGrid"
                                                    AutoGenerateColumns="True" Background="#FFFAFAFA" BorderBrush="#1F000000" Foreground="#DD000000">
                                                        </DataGrid>
                                                        
                                                            <materialDesign:PopupBox
                                                    VerticalAlignment="Bottom"
                                                    HorizontalAlignment="Right"
                                                    Margin="0,0,55,10"
                                                    Width="25"
                                                    Height="25"
                                                    Style="{StaticResource MaterialDesignMultiFloatingActionAccentPopupBox}"
                                                    TextElement.Foreground = "{DynamicResource MaterialDesignBody}"
                                                    StaysOpen="True"
                                                    PlacementMode="TopAndAlignRightEdges">
                                                        <materialDesign:PopupBox.ToggleContent>
                                                            <materialDesign:PackIcon
                                                            Kind="Plus"
                                                            Foreground="White"
                                                            Width="18"
                                                            Height="18" />
                                                        </materialDesign:PopupBox.ToggleContent>
                                                        <Grid Background="{DynamicResource MaterialDesignCardBackground}"  
                                                            Effect="{StaticResource MaterialDesignShadowDepth2}" >
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition />
                                                                <RowDefinition />
                                                                <RowDefinition />
                                                            </Grid.RowDefinitions>
                                                            <StackPanel Grid.Row="0" 
                                                    Margin="16"
                                                    HorizontalAlignment="Center">
                                                                <TextBlock
                                                    Text="Добавить модификацию" />
                                                            </StackPanel>
                                                            <StackPanel Grid.Row="1"
                                                    Margin="16">
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Width="85"
                                                            Margin="0 8 15 0"
                                                            Text="Модификация" />
                                                                    <ComboBox 
                                                            x:Name="ordermodList"
                                                            materialDesign:HintAssist.Hint="(editable)"
                                                            MinWidth="140"
                                                            IsEditable="True">
                                                                        <ComboBox.ItemsPanel>
                                                                            <ItemsPanelTemplate>
                                                                                <VirtualizingStackPanel />
                                                                            </ItemsPanelTemplate>
                                                                        </ComboBox.ItemsPanel>
                                                                    </ComboBox>
                                                                </StackPanel>
                                                            </StackPanel>
                                                            <StackPanel Grid.Row="2"
                                                    Orientation="Horizontal"
                                                    HorizontalAlignment="Center">
                                                                <Button
                                                        Style="{StaticResource MaterialDesignFlatButton}"
                                                        IsDefault="True"
                                                        Margin="0 8 8 8"
                                                        Content="ДОБАВИТЬ"
                                                        Click="Buttonordermod_Click">
                                                                    <Button.CommandParameter>
                                                                        <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                                                                            True
                                                                        </system:Boolean>
                                                                    </Button.CommandParameter>
                                                                </Button>
                                                                
                                                            </StackPanel>
                                                        </Grid>
                                                    </materialDesign:PopupBox>
                                                            <Button
                                                    Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"
                                                    VerticalAlignment="Bottom"
                                                    HorizontalAlignment="Right"
                                                    Height="25"
                                                    Width="25"
                                                    Margin="0,0,20,10"
                                                    Click="DeleteOrdermodButton_Click"
                                                    Content="{materialDesign:PackIcon Kind=Minus, Size=18}" />
                                                    </Grid>
                                                </Border>
                                            
                                            <TextBlock
                                        Margin="0,10,0,5"
                                        Width="140"
                                        Text="Фотографии заказчика" />
                                            <DataGrid
                                            SelectionUnit ="FullRow"
                                            Height="150"
                                            Width="200"
                                            IsReadOnly ="False"
                                            x:Name="orderphotosGrid"
                                            AutoGenerateColumns="False" Background="#FFFAFAFA" BorderBrush="#1F000000" Foreground="#DD000000">
                                                <DataGrid.Columns>
                                                    <materialDesign:DataGridTextColumn
                                                    Binding="{Binding Title}"
                                                    Header="Название"
                                                    ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                                    EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}">
                                                    </materialDesign:DataGridTextColumn>

                                                    <materialDesign:DataGridTextColumn
                                                    Binding="{Binding Orderphoto}"
                                                    Header="Ссылка"
                                                    ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                                    EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}">
                                                    </materialDesign:DataGridTextColumn>
                                                </DataGrid.Columns>
                                            </DataGrid>

                                        </StackPanel>
                                        <StackPanel Grid.Row="2" Grid.ColumnSpan="2"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                            <Button
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            IsDefault="True"
                                            Margin="0 8 8 8"
                                            Content="СОХРАНИТЬ"
                                            Click="Button_Click">
                                                <Button.CommandParameter>
                                                    <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                                                        True
                                                    </system:Boolean>
                                                </Button.CommandParameter>
                                            </Button>
                                            
                                        </StackPanel>
                                    </Grid>
                                </materialDesign:PopupBox>
                                
                                <Button
                                    Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"
                                    VerticalAlignment="Bottom"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,80,60"
                                    Click="DeleteButton_Click"
                                    Content="{materialDesign:PackIcon Kind=Minus, Size=22}" />
                                <materialDesign:PopupBox
                                    VerticalAlignment="Bottom"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,20,60"
                                    Width="40"
                                    Height="40"
                                    Style="{StaticResource MaterialDesignMultiFloatingActionAccentPopupBox}"
                                    Opened="UpPopupmod_Opening"
                                    TextElement.Foreground = "{DynamicResource MaterialDesignBody}"
                                    StaysOpen="True"
                                    PlacementMode="TopAndAlignRightEdges">
                                    <materialDesign:PopupBox.ToggleContent>
                                        <materialDesign:PackIcon
                                            Kind="Pencil"
                                            Foreground="White"
                                            Width="22"
                                            Height="22" />
                                    </materialDesign:PopupBox.ToggleContent>
                                    <Grid 
                                        x:Name="upUpdateList"
                                        Background="{DynamicResource MaterialDesignCardBackground}"  
                                        Effect="{StaticResource MaterialDesignShadowDepth2}" >
                                        <Grid.RowDefinitions >
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel 
                                            Grid.Row="0"  
                                            Grid.ColumnSpan="2"
                                            Margin="16"    
                                            HorizontalAlignment="Center">
                                            <TextBlock
                                                Text="Изменение заказа" />
                                        </StackPanel>
                                        <StackPanel 
                                            Grid.Column="0" 
                                            Grid.Row="1"
                                            Margin="16">

                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Width="85"
                                                    Margin="0 8 0 0"
                                                    Text="Покраска" />
                                                <ComboBox 
                                                    x:Name="upPaintingList"
                                                    SelectedValue="{Binding Paint, Mode=OneWay}"
                                                    ItemsSource="{DynamicResource upPaintingList}"
                                                    materialDesign:HintAssist.Hint="(editable)"
                                                    MinWidth="140"
                                                    IsEditable="True">
                                                    <ComboBox.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <VirtualizingStackPanel />
                                                        </ItemsPanelTemplate>
                                                    </ComboBox.ItemsPanel>
                                                </ComboBox>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Width="85"
                                                    Margin="0 8 0 0"
                                                    Text="Размер" />
                                                <ComboBox 
                                                    x:Name="upSizeList"
                                                    SelectedValue="{Binding Size, Mode=OneWay}"
                                                    ItemsSource="{DynamicResource upSizeList}"
                                                    materialDesign:HintAssist.Hint="(editable)"
                                                    MinWidth="140"
                                                    IsEditable="True">
                                                    <ComboBox.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <VirtualizingStackPanel />
                                                        </ItemsPanelTemplate>
                                                    </ComboBox.ItemsPanel>
                                                </ComboBox>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Width="85"
                                                    Margin="0 15 0 0"
                                                    Text="Стоимость" />
                                                <TextBox
                                                    Margin="0 8 0 0"
                                                    Width="140"
                                                    HorizontalAlignment="Stretch"
